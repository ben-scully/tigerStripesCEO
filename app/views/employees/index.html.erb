<h1>Listing Employees</h1>

<%= link_to 'New Employee', new_employee_path %>

<table>
  <tr>
    <th>Name</th>
    <th>DriverLicence</th>
    <th>Registration</th>
    <th>WoF</th>
  </tr>

  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.dlicenceExpiry %></td>
      <td><%= employee.wof_expiry %></td>
      <td><%= employee.rego_expiry %></td>
      <td><%= link_to 'Show', employee_path(employee) %></td>
      <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
      <td><%= link_to 'Destroy', employee_path(employee),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
